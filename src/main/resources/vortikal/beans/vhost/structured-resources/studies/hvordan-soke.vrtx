        [endif]
      ##  
    }
     rangering-sokere {
      ##
      [resource-props "."]    
        [if rangering-sokere-fri != null && rangering-sokere-fri != ""]
          <div class="rangering-sokere-fri">[val rangering-sokere-fri # unescaped 'flattened']</div>
        [endif]
      ##  
    }
     forstevitnemal-kvote {
      ##
      [resource-props "."]    
        [if forstevitnemal-kvote-fri != null && forstevitnemal-kvote-fri != ""]
          <div class="forstevitnemal-kvote-fri">[val forstevitnemal-kvote-fri # unescaped 'flattened']</div>
        [endif]
      ##  
    }
     ordinar-kvote-alle-kvalifiserte {
      ##
      [resource-props "."]    
        [if ordinar-kvote-alle-kvalifiserte-fri != null && ordinar-kvote-alle-kvalifiserte-fri != ""]
          <div class="ordinar-kvote-alle-kvalifiserte-fri">[val ordinar-kvote-alle-kvalifiserte-fri # unescaped 'flattened']</div>
        [endif]
      ##  
    }
     innpassing-tidl-utdanning {
      ##
      [resource-props "."]    
        [if innpassing-tidl-utdanning-fri != null && innpassing-tidl-utdanning-fri != ""]
