    groupUrl : (en : "Web address", no : "Webadresse", nn :"Webadresse"),
    rssFeeds : (en : "Show content from RSS-streams (from blog, Twitter or alike)", no : "Vis innhold fra RSS-strømmer (fra blogg, Twitter e.l.)", nn :"Vis innhald frå RSS-straumar (frå blogg, Twitter e.l.)"),
    rssTitle : (en : "Title",no : "Tittel", nn : "Tittel"),
