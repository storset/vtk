<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <bean id="copyResourcesService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="manageCollectionListingService" />
    <property name="order" value="-990" />
    <property name="categories">
      <set>
        <value>collectionMenu</value>
      </set>
    </property>
    <property name="assertions">
      <list>
        <bean class="org.vortikal.web.service.RequestParameterAssertion">
          <property name="parameterName" value="action" />
          <property name="parameterValue" value="copy-resources" />
        </bean>
        <ref bean="resourceInCollection" />
      </list>
    </property>
    <property name="handler" ref="copyHandler" />
  </bean>        

  <bean id="moveResourcesService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="manageCollectionListingService" />
    <property name="order" value="-1000" />
    <property name="categories">
      <set>
        <value>collectionMenu</value>
      </set>
    </property>
    <property name="assertions">
      <list>
        <bean class="org.vortikal.web.service.RequestParameterAssertion">
          <property name="parameterName" value="action" />
          <property name="parameterValue" value="move-resources" />
        </bean>
        <ref bean="writePermissionAssertion" />
        <ref bean="resourceInCollection" />
      </list>
    </property>
    <property name="handler" ref="moveHandler" />
  </bean>        


  <bean id="copyToSelectedFolderService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="manageCollectionListingService" />
    <property name="order" value="-996" />
    <property name="categories">
      <set>
        <value>globalMenu</value>
      </set>
    </property>
    <property name="attributes">
      <map>
        <entry key="globalMenuOrder"><value type="java.lang.Integer">200</value></entry>
      </map>
    </property>
    <property name="assertions">
      <list>
        <ref bean="writePermissionAssertion" />
        <bean class="org.vortikal.web.service.RequestParameterAssertion">
          <property name="parameterName" value="action" />
          <property name="parameterValue" value="copy-resources-to-this-folder" />
        </bean>
        <bean class="org.vortikal.web.service.CopyMoveSessionVariableExistsAssertion">
          <property name="variableName" value="copymovesession" />
          <property name="action" value="copy-resources" />
        </bean>
      </list>
    </property>  
    <property name="handler" ref="copyToSelectedFolderHandler" />
  </bean>


  <bean id="moveToSelectedFolderService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="manageCollectionListingService" />
    <property name="order" value="-996" />
    <property name="categories">
      <set>
        <value>globalMenu</value>
      </set>
    </property>
    <property name="attributes">
      <map>
        <entry key="globalMenuOrder"><value type="java.lang.Integer">200</value></entry>
      </map>
    </property>

    <property name="assertions">
      <list>
        <ref bean="writePermissionAssertion" />
        <bean class="org.vortikal.web.service.RequestParameterAssertion">
          <property name="parameterName" value="action" />
          <property name="parameterValue" value="move-resources-to-this-folder" />
        </bean>
        <bean class="org.vortikal.web.service.CopyMoveSessionVariableExistsAssertion">
          <property name="variableName" value="copymovesession" />
          <property name="action" value="move-resources" />
        </bean>
      </list>
    </property>  
    <property name="handler" ref="moveToSelectedFolderHandler" />
  </bean>

  <bean id="copyHandler" 
    class="org.vortikal.web.actions.copymove.CopyMoveController">
    <property name="viewName" value="manageCollectionListing" />
  </bean>

  <bean id="moveHandler" 
    class="org.vortikal.web.actions.copymove.CopyMoveController">
    <property name="viewName" value="manageCollectionListing" />
  </bean>

  <bean id="copyToSelectedFolderHandler" 
    class="org.vortikal.web.actions.copymove.CopyMoveToSelectedFolderController"
    parent="requestLocalRepositoryAware">
    <property name="viewName" value="manageCollectionListing" />
  </bean>

  <bean id="moveToSelectedFolderHandler" 
    class="org.vortikal.web.actions.copymove.CopyMoveToSelectedFolderController"
    parent="requestLocalRepositoryAware">
    <property name="viewName" value="manageCollectionListing" />
  </bean>

</beans>
