resourcetype hvordan-soke : fellestekst-document {

  properties {
    frist-frekvens-felles : string, 
    frist-frekvens-fri : html,
    metode-felles : string, 
    metode-fri : html,
    internasjonale-sokere-felles : string, 
    internasjonale-sokere-fri : html,
    nordiske-sokere-felles : string, 
    nordiske-sokere-fri : html,
    studiekode: string,
    studieplasser: string,
    pris: string,
    opptakskrav-felles: string,
    opptakskrav-fri: html,
    generelle-felles: string,
    generelle-fri: html,
    spesielle-felles: string,
    spesielle-fri: html,
    politiattest-felles: string,
    politiattest-fri: html,
    rangering-sokere-felles: string,
    rangering-sokere-fri: html,
    forstevitnemal-kvote-felles: string,
    forstevitnemal-kvote-fri: html,
    ordinar-kvote-alle-kvalifiserte-felles: string,
    ordinar-kvote-alle-kvalifiserte-fri: html,
    poenggrenser-poengberegning-felles: string,
    innpassing-tidl-utdanning-felles: string,
    innpassing-tidl-utdanning-fri: html,
    regelverk-felles: string,
    regelverk-fri: html
 }

  edit-rules {
    group frist-frekvens (frist-frekvens-felles, frist-frekvens-fri),
    frist-frekvens-felles (class[vrtx-shared-text]),
    group metode (metode-felles, metode-fri), 
    metode-felles (class[vrtx-shared-text]),
    group internasjonale-sokere (internasjonale-sokere-felles, internasjonale-sokere-fri),
    internasjonale-sokere-felles (class[vrtx-shared-text]),
    group nordiske-sokere (nordiske-sokere-felles, nordiske-sokere-fri),
    nordiske-sokere-felles (class[vrtx-shared-text]),
    group opptakskrav (opptakskrav-felles, opptakskrav-fri),
    opptakskrav-felles (class[vrtx-shared-text]),
    group generelle (generelle-felles, generelle-fri),
    generelle-felles (class[vrtx-shared-text]),
    group spesielle (spesielle-felles, spesielle-fri),
    spesielle-felles (class[vrtx-shared-text]),
    group politiattest (politiattest-felles, politiattest-fri),
    politiattest-felles (class[vrtx-shared-text]),
    studiekode (after nordiske-sokere),
    studieplasser (after studiekode),
    pris (after studieplasser),
    group rangering-sokere (rangering-sokere-felles, rangering-sokere-fri),
    rangering-sokere-felles (class[vrtx-shared-text]),
    group forstevitnemal-kvote (forstevitnemal-kvote-felles, forstevitnemal-kvote-fri),
    forstevitnemal-kvote-felles (class[vrtx-shared-text]),
    group ordinar-kvote-alle-kvalifiserte (ordinar-kvote-alle-kvalifiserte-felles, ordinar-kvote-alle-kvalifiserte-fri),
    ordinar-kvote-alle-kvalifiserte-felles (class[vrtx-shared-text]),
    poenggrenser-poengberegning-felles (class[vrtx-shared-text]),
    group innpassing-tidl-utdanning (innpassing-tidl-utdanning-felles, innpassing-tidl-utdanning-fri),
    innpassing-tidl-utdanning-felles (class[vrtx-shared-text]),
    group regelverk (regelverk-felles, regelverk-fri),
    regelverk-felles (class[vrtx-shared-text])
  }


  view-components {
  
     frist-frekvens {
      ##
      [resource-props "."]    
        [if frist-frekvens-fri != null && frist-frekvens-fri != ""]
          <div class="frist-frekvens-fri">[val frist-frekvens-fri # unescaped 'flattened']</div>
        [endif]
      ##  
    }
      metode {
      ##
      [resource-props "."]    
        [if metode-fri != null && metode-fri != ""]
          <div class="metode-fri">[val metode-fri # unescaped 'flattened']</div>
        [endif]
      ##  
    }
     internasjonale-sokere {
      ##
      [resource-props "."]    
