<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <bean id="icalService" class="org.vortikal.web.service.ServiceImpl">
  <property name="parent" ref="webService" />
    <property name="order" value="-999" />
    <property name="assertions">
      <list>
         <bean class="org.vortikal.web.service.OrAssertion">
          <property name="assertions">
            <list>
              <ref bean="isEventAssertion" />
              <ref bean="resourceTypeIsStructuredEvent" />
              <ref bean="resourceIsEventListing" />
            </list>
          </property>
        </bean>
        <bean class="org.vortikal.web.service.RequestParameterAssertion">
          <property name="parameterName" value="vrtx" />
          <property name="parameterValue" value="ical" />
        </bean>
      </list>
    </property>
    <property name="handler" ref="icalHandler" />
  </bean>
  
  <bean id="icalHandler" class="org.vortikal.web.display.ical.ICalController">
    <property name="startDatePropDef" ref="startDatePropDef" />
    <property name="endDatePropDef" ref="endDatePropDef" />
    <property name="locationPropDef" ref="locationPropDef" />
    <property name="introductionPropDef" ref="introductionPropDef" />
  </bean>

  <bean id="resourceTypeIsStructuredEvent" class="org.vortikal.web.service.ResourceTypeAssertion" parent="repositoryAware">
    <property name="resourceType" value="structured-event" />
  </bean>

</beans>
