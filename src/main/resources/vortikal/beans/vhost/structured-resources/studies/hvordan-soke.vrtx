      ##
      [resource-props "."]    
        [if spesielle-fri != null && spesielle-fri != ""]
          <div class="spesielle-fri">[val spesielle-fri # unescaped 'flattened']</div>
        [endif]
      ##  
    }
     politiattest {
      ##
