<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
"http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <!-- ## Manage trash can ## -->
  <bean id="trashCanService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="manageService" />
    <property name="categories">
      <set>
        <value>tabMenu</value>
      </set>
    </property>
    <property name="attributes">
      <map>
        <entry key="tabOrder">
          <value type="java.lang.Integer">390</value>
        </entry>
      </map>
    </property>
    <property name="assertions">
      <list>
        <ref bean="resourceInCollection" />
        <bean class="org.vortikal.web.service.RequestParameterAssertion">
          <property name="parameterName" value="mode" />
          <property name="parameterValue" value="trash-can" />
        </bean>
      </list>
    </property>
    <property name="handler" ref="trashCanHandler" />
  </bean>

  <bean id="trashCanHandler" class="org.vortikal.web.actions.trashcan.TrashCanController">
    <property name="formView" value="trashCan" />
    <property name="successView" value="redirectToManage" />
    <property name="commandClass" value="org.vortikal.web.actions.trashcan.TrashCanCommand" />
    <property name="commandName" value="trashcan" />
  </bean>

  <bean id="trashCan.viewResolver" parent="system.decoratingViewResolver">
    <property name="views">
      <map>
        <entry key="trashCan" value-ref="trashCanView" />
      </map>
    </property>
  </bean>

  <bean id="trashCanView" parent="freemarkerView">
    <property name="url" value="pages/trash-can.ftl" />
    <property name="referenceDataProviders">
      <list>
        <ref bean="overDueLimitMessageProvider" />
      </list>
    </property>
    <property name="attributesMap">
      <map>
        <entry key="cssURLs">
          <list>
            <value>${themeBaseURL}/basic.css</value>
            <value>${themeBaseURL}/trash-can/trash-can.css</value>
          </list>
        </entry>
        <entry key="jsURLs">
          <list>
            <value>${jsBaseURL}/ie6-table-tr-hover.js</value>
          </list>
        </entry>
      </map>
    </property>
  </bean>

  <bean id="overDueLimitMessageProvider" class="org.vortikal.web.referencedata.provider.OverDueLimitMessageProvider">
    <property name="permanentDeleteOverdueLimitInDays" value="${repository.permanentDeleteOverdueLimitInDays}" />
  </bean>

  <bean class="org.springframework.context.support.ResourceBundleMessageSource">
    <property name="basenames">
      <list>
        <value>vortikal.i18n.trash-can.trash-can</value>
      </list>
    </property>
  </bean>

  <!-- ## Periodically purge trash can for overdue and orphans ## -->
  <bean id="repository.trashCanPruger" class="org.vortikal.web.actions.trashcan.TrashCanPurger"
    parent="repositoryAware" />

  <bean id="repository.trashcCanPurgerTrigger" class="org.vortikal.scheduling.SimpleMethodInvokingTriggerBean">
    <property name="targetMethodName" value="purgeTrashCan" />
    <property name="targetObject" ref="repository.trashCanPruger" />
    <property name="triggerThreadName" value="${repositoryID}.trashcanpurger" />
    <property name="startDelay" value="20000" />
    <!-- Run every 5min (300000ms) -->
    <property name="repeatInterval" value="300000" />
    <property name="startTriggerAfterInitialization" value="true" />
    <property name="abortTriggerOnTargetMethodException" value="false" />
  </bean>

</beans>
