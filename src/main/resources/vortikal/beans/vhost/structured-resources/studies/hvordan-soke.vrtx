          <div class="regelverk-fri">[val regelverk-fri # unescaped 'flattened']</div>
        [endif]
      ##
    } 
}


view {
    ##
    <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
    <html xmlns="http://www.w3.org/1999/xhtml">
      <head>
        <title></title>
      </head>
      <body id="vrtx-structured-article">
        <div id="vrtx-content">
        
        [def document structured-document()]
        [def regelverk-felles document.properties.regelverk-felles]
        [def regelverk-fri document.properties.regelverk-fri]
          <div id="vrtx-main-content" class="vrtx-hide-additional-content-false">      
             
            <h2>[localized 'opptak']</h2>
            [call "comp:vis-fellestekst" {"docType":"hvordan-soke", "propName":"frist-frekvens-felles"}]
            [call "comp:frist-frekvens"]
            [call "comp:vis-fellestekst" {"docType":"hvordan-soke", "propName":"metode-felles"}]
            [call "comp:metode"]
            [call "comp:vis-fellestekst" {"docType":"hvordan-soke", "propName":"internasjonale-sokere-felles"}]
            [call "comp:internasjonale-sokere"]
            [call "comp:vis-fellestekst" {"docType":"hvordan-soke", "propName":"nordiske-sokere-felles"}]
            [call "comp:nordiske-sokere"]
            [call "comp:studiekode"]
            [call "comp:studieplasser"]
            [call "comp:pris"]
            <h2>[localized 'opptakskrav-view']</h2>
            [call "comp:vis-fellestekst" {"docType":"hvordan-soke", "propName":"opptakskrav-felles"}]
            [call "comp:opptakskrav"]
            [call "comp:vis-fellestekst" {"docType":"hvordan-soke", "propName":"generelle-felles"}]
            [call "comp:generelle"]
            [call "comp:vis-fellestekst" {"docType":"hvordan-soke", "propName":"spesielle-felles"}]
            [call "comp:spesielle"]
            [call "comp:vis-fellestekst" {"docType":"hvordan-soke", "propName":"politiattest-felles"}]
            [call "comp:politiattest"]
            [call "comp:vis-fellestekst" {"docType":"hvordan-soke", "propName":"rangering-sokere-felles"}]
            [call "comp:rangering-sokere"]
            <h2>[localized 'poenggrenser'] (årstall)</h2>
            [call "comp:vis-fellestekst" {"docType":"hvordan-soke", "propName":"forstevitnemal-felles"}]
            [call "comp:forstevitnemal-kvote"]
            [call "comp:vis-fellestekst" {"docType":"hvordan-soke", "propName":"ordinar-kvote-alle-kvalifiserte-felles"}]
            [call "comp:ordinar-kvote-alle-kvalifiserte"]
            [call "comp:vis-fellestekst" {"docType":"hvordan-soke", "propName":"poenggrenser-poengberegning-felles"}]
            [call "comp:vis-fellestekst" {"docType":"hvordan-soke", "propName":"innpassing-tidl-utdanning-felles"}]
            [call "comp:innpassing-tidl-utdanning"]
          </div>
          [if ((regelverk-fri != null && regelverk-fri != "") || (regelverk-felles != null && regelverk-felles != ""))]
            <div id="vrtx-additional-content">
              <div id="vrtx-related-content">
                [if (regelverk-felles != null && regelverk-felles != "")]
                  [call "comp:vis-fellestekst" {"docType":"hvordan-soke", "propName":"regelverk-felles"}]
                [endif]
                [call "comp:regelverk-in-additional-column"] 
              </div> 
          </div>
          [endif]
        </div> 
      </body>
    </html>
    ##
  }


