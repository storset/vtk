<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <!-- Video resource -->

  <bean id="videoResourceTypeDefinition" class="org.vortikal.repository.resourcetype.PrimaryResourceTypeDefinitionImpl">
    <property name="name" value="video" />
    <property name="namespace" ref="DEFAULT_NAMESPACE" />
    <property name="parentTypeDefinition" ref="fileResourceTypeDefinition" />
    <property name="assertions">
      <list>
        <ref bean="contentTypeMatchesVideo" />
      </list>
    </property>
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="posterImagePropDef" />
        <ref bean="generatedPosterImagePropDef" />
        <ref bean="videoHtmlDescriptionPropDef" />
      </list>
    </property>
    <property name="mixinTypeDefinitions">
      <list>
        <ref bean="mediaMixinResourceTypeDef" />
      </list>
    </property>
  </bean>
  
  <bean id="contentTypeMatchesVideo" class="org.vortikal.web.service.ResourceContentTypeRegexpAssertion">
    <property name="pattern" value="video/(.+)" />
  </bean>
  
  <bean id="contentTypeMatchesAudioOrVideo" class="org.vortikal.web.service.ResourceContentTypeRegexpAssertion">
    <property name="pattern" value="(video/(.+))||(audio/(.+))" />
  </bean>
  
  <bean id="mediaPlayerService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <ref bean="contentTypeMatchesAudioOrVideo" />
        <ref bean="asWebpageAssertion" />
      </list>
    </property>
  </bean>

  <bean id="videoPlayerService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="mediaPlayerService" />
    <property name="assertions">
      <list>
        <ref bean="contentTypeMatchesVideo" />
        <ref bean="asWebpageAssertion" />
      </list>
    </property>
    <property name="handler" ref="displayVideoResource" />
  </bean>
  
  <bean id="audioPlayerService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="mediaPlayerService" />
    <property name="assertions">
      <list>
        <ref bean="contentTypeMatchesAudio" />
        <ref bean="asWebpageAssertion" />
      </list>
    </property>
    <property name="handler" ref="displayAudioResource" />
  </bean>


  <bean id="mediaPlayer" class="org.vortikal.web.display.media.MediaPlayer">
    <property name="extentionToMimetype">
      <map>
        <entry key="mp4" value="video/mp4" />
        <entry key="mov" value="video/quicktime" />
        <entry key="mp3" value="audio/mpeg" />
        <entry key="swf" value="application/x-shockwave-flash" />
        <entry key="flv" value="video/x-flv" />
      </map>
    </property>
    <property name="posterImagePropDef" ref="posterImagePropDef" />
    <property name="generatedPosterImagePropDef" ref="generatedPosterImagePropDef" />
    <property name="viewService" ref="viewService" />
    <property name="thumbnailService" ref="displayThumbnailService" />
  </bean>

  <bean id="displayAudioResource" class="org.vortikal.web.display.media.DisplayMediaController">
    <property name="mediaPlayer" ref="mediaPlayer" />
    <property name="viewName" value="viewMediaPlayer" />
    <property name="descriptionPropDef" ref="audioHtmlDescriptionPropDef" />
  </bean>
  
  <bean id="displayVideoResource" class="org.vortikal.web.display.media.DisplayMediaController">
    <property name="mediaPlayer" ref="mediaPlayer" />
    <property name="viewName" value="viewMediaPlayer" />
    <property name="descriptionPropDef" ref="videoHtmlDescriptionPropDef" />
  </bean>

  <bean id="displayMediaResourceViewResolver" parent="decoratorViewResolver">
    <property name="views">
      <map>
        <entry key="viewMediaPlayer" value-ref="displayMediaResourceView" />
      </map>
    </property>
  </bean>

  <bean name="displayMediaResourceView" parent="freemarkerView">
    <property name="url" value="pages/media-player.ftl" />
    <property name="attributes">
      <map>
        <entry key="height" value="322px" />
        <entry key="width" value="507px" />
        <entry key="autoplay" value="false" />
        <entry key="audioFlashPlayerJsURL" value="${jsBaseURL}/audio-player.js" />
        <entry key="audioFlashPlayerFlashURL" value="${flash.baseURL}/audioplayer.swf" />
        <entry key="strobe" value="${flash.baseURL}/StrobeMediaPlayback_1.5.1-patched/10.1/StrobeMediaPlayback.swf" />
      </map>
    </property>
    <property name="referenceDataProviders">
      <list>
        <ref bean="resourceContextProvider" />
      </list>
    </property>
    <property name="attributesMap">
      <map>
        <entry key="jsURLs">
          <list>
            <value>${jquery.baseURL}/include-jquery.js</value>
            <value>${webResources.baseURL}/js/ssl-com-link.js</value>
            <value>${webResources.baseURL}/js/iframe-view-not-another-iframe.js</value>
          </list>
        </entry>
      </map>
    </property>
  </bean>
  
  <bean id="videoHtmlDescriptionPropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="name" value="video-description" /> 
    <property name="type" value="HTML" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
  </bean>
  
  <bean id="mediaPlayerService.urlProvider" class="org.vortikal.web.referencedata.provider.ResourceServiceURLProvider">
    <property name="modelName" value="previewImage" />
    <property name="urlName" value="URL" />
    <property name="service" ref="mediaPlayerService" />
  </bean>

  <bean id="posterImagePropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="contentRelation" value="PRE_CONTENT" />
    <property name="name" value="poster-image" />
    <property name="type" value="IMAGE_REF" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
  </bean>

  <bean id="generatedPosterImagePropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl"
    parent="abstractPropDef">
    <property name="name" value="generated-poster-image" />
    <property name="type" value="BINARY" />
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE" />
    <property name="mandatory" value="false" />
  </bean>

</beans>