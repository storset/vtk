<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <bean id="eventListing.viewService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="collectionListing.viewService" />
    <property name="order" value="0" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsEventListing" />
      </list>
    </property>
    <property name="handler" ref="eventListing.handler" />
    <property name="serviceNameProvider" ref="collectionListing.viewService.serviceNameProvider" />
  </bean>

  <bean id="eventListing.atomService" class="org.vortikal.web.service.ServiceImpl">
    <property name="parent" ref="collectionListing.atomService" />
    <property name="order" value="-2" />
    <property name="assertions">
      <list>
        <ref bean="resourceIsEventListing" />
      </list>
    </property>
    <property name="handler" ref="eventListing.atomHandler" />
  </bean>

  <bean id="eventListing.handler" class="org.vortikal.web.display.collection.event.EventListingController">
    <property name="resourceManager" ref="resourceManager" />
    <property name="subFolderMenuProvider" ref="subFolderMenuProvider" />
    <property name="viewName" value="${override.listing.prefix}eventListing.view" />
    <property name="pageLimitPropDef" ref="pageLimitPropDef" />
    <property name="hideNumberOfComments" ref="hideNumberOfCommentsPropDef" />
    <property name="defaultPageLimit" value="${collectionListing.defaultPageLimit}" />
    <property name="searcher" ref="eventListing.eventListingSearcher" />
    <property name="alternativeRepresentations">
      <map>
        <entry key="application/atom+xml" value-ref="eventListing.atomService" />
      </map>
    </property>
    <property name="includeRequestParametersInAlternativeRepresentation" value="true" />
  </bean>

  <bean id="eventListing.eventListingSearcher" class="org.vortikal.web.display.collection.event.EventListingSearcher">
    <property name="upcomingEventsSearch" ref="${override.listing.prefix}eventListing.upcomingEventsSearchComponent" />
    <property name="previousEventsSearch" ref="${override.listing.prefix}eventListing.previousEventsSearchComponent" />
    <property name="processedQuerySearchComponent" ref="eventListing.processedQuerySearchComponent" />
    <property name="groupedEventSearchString" ref="${override.listing.prefix}eventListing.groupedByDayEventSearchQueryString" />
    <property name="furtherUpcomingSearchString" ref="${override.listing.prefix}eventListing.furtherUpcomingSearchString" />
    <property name="specificDateEventSearchString" ref="${override.listing.prefix}eventListing.specificDateEventSearchQueryString" />
  </bean>

  <bean id="eventListing.processedQuerySearchComponent" class="org.vortikal.web.search.QueryStringSearchComponent"
    parent="${override.listing.prefix}eventListing.upcomingEventsSearchComponent">
    <property name="name" value="eventListing.calendarEventSearch" />
    <property name="titleLocalizationKey">
      <null />
    </property>
    <property name="query">
      <!-- Process and set the query in the controller that uses the component -->
      <null />
    </property>
  </bean>

  <bean id="eventListing.atomHandler" class="org.vortikal.web.display.collection.event.EventListingAsFeedController"
    parent="viewAsFeedHandler">
    <property name="helper" ref="eventListingHelper" />
    <property name="searcher" ref="eventListing.eventListingSearcher" />
    <property name="displayTypePropDef" ref="eventListing.displayTypePropDef" />
    <property name="overridePublishDatePropDefPointer" ref="${override.listing.prefix}overridePublishDatePropDefPointer" />
  </bean>

  <bean id="overridePublishDatePropDefPointer" class="java.lang.String">
    <constructor-arg value="start-date" />
  </bean>

  <bean id="structured.overridePublishDatePropDefPointer" class="java.lang.String">
    <constructor-arg value="resource:start-date" />
  </bean>

  <bean id="eventListingHelper" class="org.vortikal.web.display.collection.event.EventListingHelper">
    <property name="localeResolver" ref="viewServiceResourceAwareLocaleResolver" />
    <property name="dateValueFormatter" ref="dateValueFormatter" />
    <property name="eventTypeTitlePropDef" ref="eventListing.eventTypeTitlePropDef" />
  </bean>

  <bean id="eventListing.upcomingEventsSearchComponent" class="org.vortikal.web.search.QueryStringSearchComponent">
    <property name="name" value="eventListing.upcomingEventsSearchComponent" />
    <property name="titleLocalizationKey" value="eventListing.upcomingEvents" />
    <property name="viewService" ref="webService" />
    <property name="resourceManager" ref="resourceManager" />
    <property name="defaultRecursive" value="true" />
    <property name="recursivePropDef" ref="eventListing.recursiveListingPropDef" />
    <property name="query">
      <value>
        ((uri = {$currentFolder}/* OR uri IN {$manuallyApprovedResources}) AND type IN event)
          AND ((end-date not exists AND start-date &gt;= {$currentDate}) OR (end-date &gt;= {$currentTime}))
      </value>
    </property>
    <property name="queryParser" ref="searchParser" />
    <property name="listableProperties" ref="eventListing.listableProperties" />
    <property name="aggregationResolver" ref="aggregationResolver" />
    <property name="searchSorting" ref="eventListing.upcoming.searchSorting" />
  </bean>

  <bean id="eventListing.upcoming.searchSorting" class="org.vortikal.web.search.SearchSorting" depends-on="resourceTypeTree">
    <property name="sortOrderPropDefPointers">
      <list>
        <value>start-date</value>
      </list>
    </property>
    <property name="resourceTypeTree" ref="resourceTypeTree" />
    <property name="defaultSortOrder" ref="SORT_ORDER.ASC" />
  </bean>

  <bean id="eventListing.previousEventsSearchComponent" class="org.vortikal.web.search.QueryStringSearchComponent">
    <property name="name" value="eventListing.previousEventsSearchComponent" />
    <property name="titleLocalizationKey" value="eventListing.previousEvents" />
    <property name="viewService" ref="webService" />
    <property name="resourceManager" ref="resourceManager" />
    <property name="defaultRecursive" value="true" />
    <property name="recursivePropDef" ref="eventListing.recursiveListingPropDef" />
    <property name="query">
               <value>(uri = {$currentFolder}/* AND type IN event) AND (end-date &lt; {$currentTime} OR (end-date not exists AND start-date &lt; {$currentDate}))</value>
    </property>
    <property name="queryParser" ref="searchParser" />
    <property name="listableProperties" ref="eventListing.listableProperties" />
    <property name="aggregationResolver" ref="aggregationResolver" />
    <property name="searchSorting" ref="eventListing.previous.searchSorting" />
  </bean>

  <bean id="eventListing.previous.searchSorting" class="org.vortikal.web.search.SearchSorting" depends-on="resourceTypeTree">
    <property name="sortOrderPropDefPointers">
      <list>
        <value>start-date</value>
      </list>
    </property>
    <property name="resourceTypeTree" ref="resourceTypeTree" />
    <property name="defaultSortOrder" ref="SORT_ORDER.DESC" />
  </bean>

  <bean id="eventListing.listableProperties" class="java.util.ArrayList">
    <constructor-arg>
      <list>
        <bean class="org.vortikal.web.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="startDatePropDef" />
        </bean>
        <bean class="org.vortikal.web.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="endDatePropDef" />
          <property name="preventDisplayProperty" ref="eventListing.hideEndDatePropDef" />
        </bean>
        <bean class="org.vortikal.web.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="locationPropDef" />
          <property name="preventDisplayProperty" ref="eventListing.hideLocationPropDef" />
        </bean>
        <bean class="org.vortikal.web.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="introductionImagePropDef" />
          <property name="preventDisplayProperty" ref="articleListing.hideIntroductionImagePropDef" />
        </bean>
        <bean class="org.vortikal.web.search.PropertyDisplayConfig">
          <property name="displayProperty" ref="introductionPropDef" />
          <property name="preventDisplayProperty" ref="articleListing.hideIntroductionPropDef" />
        </bean>
      </list>
    </constructor-arg>
  </bean>

  <bean id="eventListing.viewResolver" parent="decoratorViewResolver">
    <property name="views">
      <map>
        <entry key="${override.listing.prefix}eventListing.view" value-ref="${override.listing.prefix}eventListing.view" />
        <entry key="eventListingCalendar.view" value-ref="eventListingCalendar.view" />
      </map>
    </property>
  </bean>

  <bean id="eventListing.view" parent="collectionListing.view" />

</beans>
