   <bean id="xmlSchemaRegistry.cache.loader" class="org.vortikal.util.cache.loaders.JDOMCacheLoader">
     <property name="connectTimeoutSeconds" value="5" />
     <property name="readTimeoutSeconds" value="5" />
   </bean>

</beans>
