        [endif]
      ##  
    }
     nordiske-sokere {
      ##
      [resource-props "."]    
        [if nordiske-sokere-fri != null && nordiske-sokere-fri != ""]
          <div class="nordiske-sokere-fri">[val nordiske-sokere-fri # unescaped 'flattened']</div>
        [endif]
      ##  
    }
     studiekode {
      ##
      [resource-props "."]    
        [if studiekode != null && studiekode != ""]
          <h2>[localized 'studiekode-view']</h2>
          <div class="studiekode">[val studiekode]</div>
        [endif]
      ##  
    }
     studieplasser {
      ##
      [resource-props "."]    
        [if studieplasser != null && studieplasser != ""]
          <h2>[localized 'studieplasser-view']</h2>
          <div class="studieplasser">[val studieplasser]</div>
        [endif]
      ##  
    }
     pris {
      ##
      [resource-props "."]    
        [if pris != null && pris != ""]
          <h2>[localized 'pris-view']</h2>
          <div class="pris">[val pris]</div>
        [endif]
      ##  
    }
     opptakskrav {
      ##
      [resource-props "."]    
        [if opptakskrav-fri != null && opptakskrav-fri != ""]
          <div class="opptakskrav-fri">[val opptakskrav-fri # unescaped 'flattened']</div>
        [endif]
