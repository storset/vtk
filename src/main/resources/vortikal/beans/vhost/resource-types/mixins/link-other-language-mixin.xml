<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <bean id="linkOtherLanguageMixinResourceTypeDef" 
        class="org.vortikal.repository.resourcetype.MixinResourceTypeDefinitionImpl">
    <property name="name" value="link-other-language-mixin"/>
    <property name="namespace" ref="DEFAULT_NAMESPACE" /> 
    <property name="propertyTypeDefinitions">
      <list>
        <ref bean="linkOtherLanguagePropDef" />
      </list>
    </property>
  </bean>  

  <bean id="linkOtherLanguagePropDef" class="org.vortikal.repository.resourcetype.PropertyTypeDefinitionImpl" parent="abstractPropDef">
    <property name="contentRelation" value="POST_CONTENT" />
    <property name="name" value="linkOtherLanguage"/>
    <property name="type" value="STRING"/>
    <property name="protectionLevel" ref="PROTECTION_LEVEL_ACL_WRITE"/>
    <property name="mandatory" value="false"/>
  </bean>

</beans>
